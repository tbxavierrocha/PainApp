<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PainApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PainApp"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="Gray">

    <TabBar >
        
        <ShellContent
            Title="EVA"
            Icon="pin.png"
            ContentTemplate="{DataTemplate views:PainView}"
            Route="MainPage" />

        <ShellContent
            Title="Corlett"
            Icon="man.png"
            ContentTemplate="{DataTemplate views:CorlettView}"
            Route="Corlett" />

        <ShellContent
            Title="Sobre"
            Icon="icon_about.png"
            ContentTemplate="{DataTemplate views:AboutView}"
            Route="Sobre" />
    </TabBar>
</Shell>
